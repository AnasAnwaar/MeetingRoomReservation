<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#032B8F"
    android:gravity="center">

    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Admin"
        android:backgroundTint="#EA0505"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="onAdminLoginClick"/>

    <Button
        android:id="@+id/btnUserLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as User"
        android:backgroundTint="#EA0505"
        android:layout_below="@id/btnAdminLogin"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="onUserLoginClick"/>

    <Button
        android:id="@+id/btnDisplayDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Display Device"
        android:backgroundTint="#EA0505"
        android:layout_below="@id/btnUserLogin"
        android:layout_centerHorizontal="true"
        android:onClick="onDisplayDeviceClick"/>

</RelativeLayout>
