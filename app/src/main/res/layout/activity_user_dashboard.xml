<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Reservation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="goToReservationActivity" />

    <Button
        android:id="@+id/buttonRoomStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Status"
        android:layout_below="@id/buttonReservation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="goToRoomStatusActivity" />

</RelativeLayout>
